{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "removeComments": true,
    "jsx": "react-jsx",
    "outDir": "build",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "build/"]
}
