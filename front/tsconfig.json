{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2015",
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "src",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx" //JSX 컴파일에 react v17의 _jsx transform를 사용.
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
}
